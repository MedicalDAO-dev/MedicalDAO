    "@openzeppelin/contracts-upgradeable": "^4.9.0",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "base64-sol": "^1.1.0",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "hardhat": "^2.14.0",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "hardhat-contract-sizer": "^2.10.0",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3"
  }
